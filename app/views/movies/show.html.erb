<div class="container">
<div class="panel panel-default">
	<div class="panel-body">
	<div class="row">
	<div class="col-md-4">
	<%= image_tag @movie.image.url(:medium) %>
	<div class="table-responsive">
	<table class="table">
	<tbody>
		<tr>
		<td><strong>Title:</strong></td>
		<td><%=@movie.title%></td>
		</tr>
		<tr>
		<td><strong>Description:</strong></td>
		<td><%=@movie.description%></td>
		</tr>
		<tr>
		<td><strong>Duration:</strong></td>
		<td><%=@movie.duration%></td>
		</tr>
	</tbody>
	</table>
	<%= link_to 'write a review', new_movie_review_path(@movie) ,class: "btn btn-default"%>
	</div>
	</div>
	<div class="col-md-7 col-md-offset-1">
	<h1 class="review_title"><%= @movie.title %></h1>
	<p><%= @movie.description %> </p>
	<% if @reviews.blank? %>
	<h3>no reviews yet,be the first to add one</h3>
	<%= link_to "write review",new_movie_review_path(@movie),class: "btn btn-default" %>
	<%else%>
	<% @reviews.each do |r| %>
	<div class="reviews">
	<p><%= r.rating %></p>
	<p><%= r.comment %></p>
	</div>
	<%end%>
	<% end %>
	</div>
	</div>
	</div>
</div>
<center>
<%= link_to 'Edit', edit_movie_path(@movie),class: "btn btn-default" %>
<%= link_to 'Back', movies_path,class: "btn btn-default" %>
</center>
</div>